<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lemmikki.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/LightPink"
    android:id="@+id/main_container">


    <TextView
        android:id="@+id/TextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="7dp"
        android:text="Lemmikki"
        android:textColor="@color/colorAccent"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/TextViewFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/TextViewWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewFood"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/TextViewPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewWash"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/TextViewSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewPet"
        android:layout_marginLeft="4dp"
        />

    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="10pt"
        />


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_bar"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">


    <ImageButton

            android:id="@+id/ImageButtonFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/cake"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toEndOf="@+id/buttonSettings" />

    <ImageButton
            android:id="@+id/ImageButtonSleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/night"
            android:layout_alignBottom="@+id/ImageButtonPet"
            android:layout_toRightOf="@+id/ImageButtonPet" />

    <ImageButton
            android:id="@+id/ImageButtonWash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/shower"
            android:layout_alignBottom="@+id/ImageButtonFeed"
            android:layout_toRightOf="@+id/ImageButtonFeed" />

    <ImageButton
            android:id="@+id/ImageButtonPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/brush"
            android:scaleType="centerInside"
            android:layout_alignBottom="@+id/ImageButtonWash"
            android:layout_toRightOf="@+id/ImageButtonWash" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Change Name"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/buttonDeleteSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/buttonName"
        android:text="Delete Settings"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/egg"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/egg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/TextViewHappinnes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_bar"
        android:layout_alignParentEnd="true"
        android:textSize="10pt"
        />
    <TextView
        android:id="@+id/TextViewExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextViewHappinnes"
        android:layout_alignParentEnd="true"
        android:textSize="10pt"
        />
    <TextView
        android:id="@+id/TextViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextViewExp"
        android:layout_alignParentEnd="true"
        android:textSize="10pt"
        />

</RelativeLayout>