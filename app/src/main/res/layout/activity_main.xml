<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lemmikki.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/LightPink"
    android:id="@+id/main_container">


    <TextView
        android:id="@+id/TextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="7dp"
        android:text="Lemmikki"
        android:textColor="@color/colorAccent"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/TextViewFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/TextViewWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewFood"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/TextViewPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewWash"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/TextViewSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/TextViewPet"
        android:layout_marginLeft="4dp"
        />

    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textSize="10pt"
        />


    <Button
        android:id="@+id/buttonFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/buttonWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wash"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/buttonFeed"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/buttonSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/buttonPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/buttonSleep"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />


    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Change Name"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/buttonDeleteSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/buttonName"
        android:text="Delete Settings"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/egg"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/egg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>